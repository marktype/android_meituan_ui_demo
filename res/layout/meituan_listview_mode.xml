<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/meituan_content_img"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@drawable/listimage1" />

    <TextView
        android:id="@+id/meituan_content_img_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/meituan_content_img"
        android:layout_centerHorizontal="true"
        android:text="鲁西肥牛" />

    <TextView
        android:id="@+id/meituen_price_one_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/meituan_content_img_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="23.0 40.0" />

</RelativeLayout>